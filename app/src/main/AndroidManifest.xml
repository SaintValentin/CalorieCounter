<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.khakin.valentin.calorie_counter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".MyApplication"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ProfileActivity" android:parentActivityName=".MainActivity" android:label="@string/activity_profile"/>
        <activity android:name=".GraphicsActivity" android:parentActivityName=".MainActivity" android:label="@string/activity_graphics"/>
        <activity android:name=".TotalPFCActivity" android:parentActivityName=".MainActivity" android:label="@string/activity_totalPFC"/>
        <activity android:name=".InsertActivity" android:parentActivityName=".MainActivity" android:label="@string/activity_insert"/>
        <activity android:name=".NotificationActivity" android:parentActivityName=".MainActivity" android:label="@string/activity_notification"/>
        <activity android:name=".SettingsActivity" android:parentActivityName=".MainActivity" android:label="@string/activity_settings"/>

        <activity android:name=".FoodActivity" android:parentActivityName=".MainActivity" android:label="@string/activity_food"/>
        <activity android:name=".SportActivity" android:parentActivityName=".MainActivity" android:label="@string/activity_sport"/>
    </application>

</manifest>